@model Proyecto.Models.EditViewModel
@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <div style="margin-top: 50px;">
        @using (Html.BeginForm("Edit", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div id="details">
                <div class="row">
                    <div class="col">
                        <div class="card-header">
                            <h4>Editar Usuario</h4>
                            <hr />
                            @if (ViewData["Message"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Message"]
                                </div>
                            }
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.UserId)
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                                    <br />
                                    @Html.EditorFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                                <br />
                                @Html.EditorFor(m => m.LastName, new { @class = "form-control" })
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                                <br />
                                @Html.EditorFor(m => m.Phone, new { @class = "form-control", @type = "tel" })
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                <br />
                                @Html.EditorFor(m => m.Email, new { @class = "form-control", @type = "email" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="actions" class="py-4 mb-4 bg-light">
                <div class="container">
                    <div class="row">
                        <div class="d-grid col-md-2 mx-auto">
                            <a class="btn btn-secondary btn-block" href="/Home/Index">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                </svg> Regresar
                            </a>
                        </div>
                        <div class="d-grid col-md-2 mx-auto">
                            <button type="submit" class="btn btn-success btn-block" name="save">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z" />
                                </svg> Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    }

</body>
</html>