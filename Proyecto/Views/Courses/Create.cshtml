@model Proyecto.Models.CourseRegisterViewModel
@{
    ViewBag.Title = "Course Register";
}

<main>
    <div style="margin-top: 50px;">
        @using (Html.BeginForm("Create", "Courses", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div id="details">
                <div class="row">
                    <div class="col">
                        <div class="card-header">
                            <h4>Nuevo Curso</h4>
                            <hr />
                            @if (ViewData["Message"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Message"]
                                </div>
                            }
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(m => m.Credits, new { @class = "form-label" })
                                <input type="number" class="form-control" id="Credits" name="Credits" min="1" value="1" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="actions" class="py-4 mb-4 bg-light">
                <div class="container">
                    <div class="row">
                        <div class="d-grid col-md-2 mx-auto">
                            <a class="btn btn-secondary btn-block" href="/Courses/Index">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                </svg> Regresar
                            </a>
                        </div>
                        <div class="d-grid col-md-2 mx-auto">
                            <button type="submit" class="btn btn-success btn-block" name="save">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z" />
                                </svg> Crear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</main>
