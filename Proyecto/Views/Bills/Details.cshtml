
@model Proyecto.Models.BillViewModel
@{
    ViewBag.Title = "Receipt";
}

<main>
    <div class="container" style="margin-top: 50px; margin-left:20%">
        <div class="row">
            <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <address>
                            <strong>Estudiante: @Model.Student</strong>
                            <br />
                            <strong>Correo: </strong>@Model.Email
                        </address>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                        <p>
                            <strong>Fecha: </strong>@Model.Date
                        </p>
                        <p>
                            <strong>Factura #: </strong>@Model.IdBill
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <h1>Factura</h1>
                    </div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Curso</th>
                                <th class="text-center">Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Details.ToList())
                            {
                                <tr>
                                    <td class="col-md-9">@item.Name</td>
                                    <td class="col-md-1 text-center">@item.Price</td>
                                </tr>
                            }
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right">
                                    <p>
                                        <strong>Decuento: </strong>
                                    </p>
                                </td>
                                <td class="text-center">
                                    <p>
                                        @Model.Discount
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right"><h4><strong>Total: </strong></h4></td>
                                <td class="text-center"><h4><strong>@Model.Total</strong></h4></td>
                            </tr>
                        </tbody>
                    </table>
                    @if (Session["detail"] != null)
                    {
                        <a href="/Home/Index" class="btn btn-primary btn-lg btn-block">
                            Volver
                        </a>
                    }
                    else
                    {
                        <a href="/EnrollmentDetails/Index" class="btn btn-primary btn-lg btn-block">
                            Volver
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</main>